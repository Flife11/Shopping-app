.page-heading {
    margin: 1.6rem auto 2rem;
}

input[type=checkbox]+.checkbox-checked, input[type=checkbox]+.checkbox-unchecked {
    border-radius: 4px;
    width: 1.8rem;
    height: 1.8rem;
    display: inline-flex;
    box-sizing: border-box;
    justify-content: center;
}

th {
    border: 0;
    padding-top: 2rem;
    padding-bottom: 2rem;
}

td, th {
    border-left: 0;
    border-right: 0;
    padding: 1rem;
}
