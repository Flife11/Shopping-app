<style>
    table{
        text-align: center;
    }
</style>


{{> header}}


<center style="margin: 3vw;">
    {{#if orders}}
        {{!-- header --}}
        <H3 style="color: #2a6792; ">Lịch sử thanh toán</H3>

        {{!-- cart part --}}
        <div>
            {{!-- cart --}}
            <div style="width: 65%;"class="border-top">
                <table class="table">
                    <thead>
                        <tr class="text-center">
                            <th scope="col" style="width: 15%;">ID</th>
                            <th scope="col" style="width: 45%;">Date</th>
                            <th scope="col" style="width: 20%;">Total</th>
                            <th scope="col" style="width: 20%;">Chi tiết</th>
                        </tr>
                    </thead>
                    <tbody>
                    {{#each orders}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.date}}</td>
                            <td>{{this.total}}</td>
                            
                            <td>
                                <a href='/account/orders/{{this.id}}' class="btn mb-5"style="background-image:linear-gradient(to right,#91d1de,#2a6792);color:white;width:130px;border-radius: 100px">
                                    <strong>Chi tiết</strong>
                                </a>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    {{else}}
        <div>
            <h1>Order not found</h1>
        </div>
    {{/if}}
</center>



{{> footer}}    